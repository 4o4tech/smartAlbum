<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchParent">

    <include layout="@layout/toolbar_scroll"/>

    <android.support.v4.widget.NestedScrollView
        style="@style/album_MatchParent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            style="@style/WrapContent.WidthMatchParent"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/btn_camera"
                style="@style/Button.Primary.WrapContent.WidthMatchParent"
                android:minHeight="@dimen/dp_90"
                android:src="@drawable/btn_camera_photo_white"/>

            <LinearLayout
                style="@style/WrapContent.WidthMatchParent"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/btn_image"
                    style="@style/Button.Primary.WrapContent.WidthMatchParent"
                    android:layout_weight="1"
                    android:contentDescription="@string/app_name"
                    android:minHeight="@dimen/dp_90"
                    android:src="@drawable/btn_image_white"/>

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/btn_video"
                    style="@style/Button.Primary.WrapContent.WidthMatchParent"
                    android:layout_weight="1"
                    android:contentDescription="@string/app_name"
                    android:minHeight="@dimen/dp_90"
                    android:src="@drawable/btn_video_white"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_album"
                style="@style/Button.Primary.WrapContent.WidthMatchParent"
                android:contentDescription="@string/app_name"
                android:minHeight="@dimen/dp_90"
                android:src="@drawable/btn_album"/>

            <ImageButton
                android:id="@+id/btn_gallery"
                style="@style/Button.Primary.WrapContent.WidthMatchParent"
                android:contentDescription="@string/app_name"
                android:minHeight="@dimen/dp_90"
                android:src="@drawable/btn_gallery"/>

            <ImageButton
                android:id="@+id/btn_chang_ui"
                style="@style/Button.Primary.WrapContent.WidthMatchParent"
                android:contentDescription="@string/app_name"
                android:minHeight="@dimen/dp_90"
                android:src="@drawable/btn_change_ui"/>

            <ImageButton
                android:id="@+id/btn_filter"
                style="@style/Button.Primary.WrapContent.WidthMatchParent"
                android:contentDescription="@string/app_name"
                android:minHeight="@dimen/dp_90"
                android:src="@drawable/btn_filter"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
